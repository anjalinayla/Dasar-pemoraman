#include <iostream>
using namespace std;

int main() {
    int totalSec;

    cout << "Input a number >1 (in seconds): ";
    cin >> totalSec;

    int day = totalSec / 86400; // 1 day = 86400 sec
    int remainSec = totalSec % 86400;

    int hour = remainSec / 3600;
    remainSec %= 3600;

    int min = remainSec / 60;
    int sec = remainSec % 60;

    cout << "\nConversion Results : " << endl;
    cout << totalSec << " Seconds = "
         << day << " Day, "
         << hour << " Hours, "
         << min << " Minutes, "
         << sec << " Seconds." << endl;



    return 0;


}
